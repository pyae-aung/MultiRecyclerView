<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="3dp"
    app:cardCornerRadius="3dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New !"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="30 % off"
            app:layout_constraintBottom_toBottomOf="@id/txtNew"
            app:layout_constraintLeft_toRightOf="@+id/txtNew" />

        <TextView
            android:id="@+id/txtPopularItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txtNew" />

        <TextView
            android:id="@+id/txtPopularBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#bfbfbf"
            android:textSize="13dp"
            app:layout_constraintLeft_toLeftOf="@id/txtPopularItemName"
            app:layout_constraintTop_toBottomOf="@id/txtPopularItemName" />

        <ImageView
            android:id="@+id/imgPopularRatingStar"
            android:layout_width="69dp"
            android:layout_height="53dp"
            android:src="@drawable/ic_ratingstars"
            app:layout_constraintLeft_toLeftOf="@id/txtPopularItemName"
            app:layout_constraintTop_toBottomOf="@id/txtPopularBrand" />

        <TextView
            android:id="@+id/txtPopularPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100000"
            app:layout_constraintLeft_toLeftOf="@id/txtPopularItemName"
            app:layout_constraintTop_toBottomOf="@id/imgPopularRatingStar" />

        <TextView
            android:id="@+id/txtKs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" KS"
            app:layout_constraintBottom_toBottomOf="@id/txtPopularPrice"
            app:layout_constraintLeft_toRightOf="@id/txtPopularPrice" />

        <TextView
            android:id="@+id/txtPopularDiscountPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="100000"
            app:layout_constraintBottom_toBottomOf="@id/txtKs"
            app:layout_constraintLeft_toRightOf="@id/txtKs" />

        <ImageView
            android:id="@+id/imgPopular"
            android:layout_width="120dp"
            android:layout_height="160dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/txtNew" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>